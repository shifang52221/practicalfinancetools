---
import "../styles/global.css";
import { SITE } from "../config/site";
import AdSenseScript from "../components/AdSenseScript.astro";
import Ga4Script from "../components/Ga4Script.astro";
import ConsentBanner from "../components/ConsentBanner.astro";

type Props = {
  title: string;
  description?: string;
  canonicalPath?: string;
  robots?: string;
};

const { title, description, canonicalPath, robots } = Astro.props;
const siteUrlRaw = Astro.site ? Astro.site.toString() : SITE.url;
const siteUrl = siteUrlRaw.endsWith("/") ? siteUrlRaw.slice(0, -1) : siteUrlRaw;
const homeUrl = `${siteUrl}/`;
const canonical = canonicalPath
  ? canonicalPath === "/"
    ? homeUrl
    : new URL(canonicalPath, siteUrl).toString()
  : undefined;
const ogImage = new URL("/og.svg", siteUrl).toString();
const showConsentBanner = canonicalPath !== "/cookie-notice";

const organizationLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${siteUrl}/#organization`,
  name: SITE.name,
  url: siteUrl,
  email: SITE.email
};

const websiteLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteUrl}/#website`,
  name: SITE.name,
  url: homeUrl,
  publisher: { "@id": `${siteUrl}/#organization` }
};
const pageType = canonicalPath?.startsWith("/guides")
  ? "Article"
  : canonicalPath?.startsWith("/topics")
    ? "CollectionPage"
    : "WebPage";
const webPageLd = {
  "@context": "https://schema.org",
  "@type": pageType,
  "@id": `${canonical ?? homeUrl}#webpage`,
  url: canonical ?? homeUrl,
  name: title,
  headline: pageType === "Article" ? title : undefined,
  description: description ?? undefined,
  isPartOf: { "@id": `${siteUrl}/#website` },
  publisher: { "@id": `${siteUrl}/#organization` },
  author: pageType === "Article" ? { "@id": `${siteUrl}/#organization` } : undefined
};
const ogType = pageType === "Article" ? "article" : "website";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" sizes="any" />
    {description ? <meta name="description" content={description} /> : null}
    {robots ? <meta name="robots" content={robots} /> : null}
    {canonical ? <link rel="canonical" href={canonical} /> : null}
    <meta property="og:site_name" content={SITE.name} />
    <meta property="og:title" content={title} />
    {description ? <meta property="og:description" content={description} /> : null}
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content={SITE.locale} />
    {canonical ? <meta property="og:url" content={canonical} /> : null}
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description ? <meta name="twitter:description" content={description} /> : null}
    <meta name="twitter:image" content={ogImage} />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#0b1220" />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(organizationLd)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteLd)} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(webPageLd)} />
    <slot name="head" />
    <script is:inline type="text/javascript">
      (function () {
        try {
          var v = window.localStorage.getItem("consent.v1");
          if (v === "accepted" || v === "declined") {
            document.documentElement.setAttribute("data-consent", v);
          }
        } catch (e) {}
      })();
    </script>
    <AdSenseScript />
    <Ga4Script />
  </head>
  <body>
    <div class="page">
      <header class="container">
        <div class="chrome topbar">
          <a class="brand" href="/">
            <span class="brand-badge" aria-hidden="true"></span>
            <span>{SITE.name}</span>
          </a>
          <nav class="nav" aria-label="Primary">
            <a href="/calculators">Calculators</a>
            <a href="/guides">Guides</a>
            <a href="/topics">Topics</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
            <a href="/privacy-policy">Privacy</a>
          </nav>
        </div>
      </header>

      <main class="container">
        <slot />
      </main>

      <footer class="container footer">
        <div class="footer-inner">
          <div class="footer-meta">Educational use only. Not financial advice.</div>
          <nav class="footer-links" aria-label="Footer">
            <a href="/terms">Terms</a>
            <a href="/privacy-policy">Privacy Policy</a>
            <a href="/editorial-policy">Editorial Policy</a>
            <a href="/methodology">Methodology</a>
            <a href="/guides">Guides</a>
            <a href="/cookie-notice">Cookie Notice</a>
            <a href="/cookie-notice#do-not-sell-share">Do Not Sell/Share</a>
            <a href="/contact">Contact</a>
          </nav>
        </div>
      </footer>
    </div>

    {showConsentBanner ? <ConsentBanner /> : null}
  </body>
</html>
